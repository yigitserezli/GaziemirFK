@using Gfk.Mvc.Models.Entities;
@model UserEntity


    <div class="container-fluid">

    </div>
    <div class="d-flex justify-content-center align-items-center text-white my-5">
        <partial class="my-5" name="~/Views/Shared/Partials/_Messages.cshtml" />
    </div>
    <div class="d-flex justify-content-center align-items-center text-white my-5">
        <h3>İletişim izinlerinizi geri çekmek için e-posta adresinizi doğrulayın...</h3>
    </div>
    <div class="d-flex justify-content-center align-items-center text-white">
        <form class="text-center" asp-controller="Auth" asp-action="ContactPermissionCanceling" method="post">
            <div class="mb-3">
                <input asp-for="Email" class="form-control text-center" placeholder="E-Posta adresinizi giriniz...">
                <div class="form-text">E-Posta bilginizi kimse ile paylaşmayacağız...</div>
            </div>
            <button type="submit" class="btn btn-danger">İptal et</button>
        </form>
    </div>
