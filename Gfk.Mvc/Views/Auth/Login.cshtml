@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<!-- Section: Design Block -->
<section class="vh-100 text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
          background-image: url('https://images.pexels.com/photos/8100784/pexels-photo-8100784.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
          height: 300px;
          "></div>
    <!-- Background image -->

    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
          margin-top: -100px;
          background: hsla(0, 0%, 100%, 0.8);
          backdrop-filter: blur(30px);
          ">
        <div class="card-body py-5 px-md-5">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <partial class="my-3" name="~/Views/Shared/Partials/_Messages.cshtml" />
                    <h2 class="fw-bold mb-3">Hoşgeldiniz</h2>
                    <h6 class="mb-4">Bugün nasılsınız?</h6>
                    <form asp-controller="Auth" asp-action="Login">

                        <!-- 2 column grid layout with text inputs for the first and last names -->
                        <div class="row">
                            <div class="col-md-4 offset-md-4 mb-4">
                                <div class="form-outline">
                                    <input asp-for="Email" class="form-control text-center" placeholder="E-posta adresinizi girin..." />
                                </div>
                            </div>
                            <div class="col-md-4 offset-md-4 mb-4">
                                <div class="form-outline">
                                    <input asp-for="Password" class="form-control text-center" placeholder="Şifrenizi girin..." />
                                </div>
                            </div>
                        </div>

                        <!-- Checkbox -->
                        <div class="form-check d-flex justify-content-center mb-4">
                            <input asp-for="RememberMe" class="form-check-input me-2 text-center" checked />
                            <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                        </div>

                        <!-- Submit button -->
                        <button id="loginBtn" type="submit" class="btn btn-primary btn-rounded btn-block mb-4"> Giriş yap </button>

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>veya</p>
                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="bi bi-facebook"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="bi bi-google"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="bi bi-twitter"></i>
                            </button>

                            <button type="button" class="btn btn-link btn-floating mx-1">
                                <i class="bi bi-github"></i>
                            </button>
                        </div>
                        <div class="text-center">
                            <p>Mevcut bir hesabın yok mu ?</p>
                            <p class="text-muted mt-0">Eğer bir hesabın yok ise <a asp-controller="Auth" asp-action="Register" style="text-decoration:none"><strong>buradan</strong></a> hesap oluşturabilirsin...</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: Design Block -->

<style>
    #loginBtn:hover {
        transform: scale(1.1) !important;
        background-color: cornflowerblue !important;
    }
</style>